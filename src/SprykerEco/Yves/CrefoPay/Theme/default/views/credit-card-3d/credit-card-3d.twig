{% extends model('template') %}

{% define data = {
    form: form
} %}

{% block body %}
    {% set crefopayFields = [
        {name: 'crefopay.accountholder', attribute: "paymentInstrument.accountHolder"},
        {name: 'crefopay.number', attribute: "paymentInstrument.number"},
        {name: 'crefopay.validity', attribute: "paymentInstrument.validity"},
        {name: 'crefopay.cvv', attribute: "paymentInstrument.cvv"}
    ] %}

    {% include molecule('crefopay-payment-form', 'CrefoPay') with {
        data: {
            paymentMethodSubForm: data.form.crefoPayCreditCard3D,
            shopPublicKey: data.form.crefoPayCreditCard3D.vars.shopPublicKey,
            orderId: data.form.crefoPayCreditCard3D.vars.orderID,
            secureFieldsLibraryUrl: data.form.crefoPayCreditCard3D.vars.secureFieldsLibraryUrl,
            fields: crefopayFields,
            crefoPayConfig: {
                url: data.form.crefoPayCreditCard3D.vars.secureFieldsApiEndpoint,
                placeholders: {
                    accountHolder: data.form.crefoPayCreditCard3D.vars.secureFieldsPlaceholders.accountHolder,
                    number: data.form.crefoPayCreditCard3D.vars.secureFieldsPlaceholders.number,
                    cvv: data.form.crefoPayCreditCard3D.vars.secureFieldsPlaceholders.cvv
                }
            }
        }
    } only %}
{% endblock %}
